    <select id="queryLoginLogCount" parameterType="java.util.Map" resultType="int">
        SELECT
            COUNT(1 )
        FROM
        t_login_log AS a
        <where>
            <if test="userId != null and userId != ''">
                a.user_id = #{userId}
            </if>
