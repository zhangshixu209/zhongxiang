    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="logNum != null">
        log_num,
      </if>
      <if test="operatePage != null">
        operate_page,
      </if>
      <if test="operateType != null">
        operate_type,
      </if>
        exec_operate_time,
        status,
      <if test="remark != null">
        remark,
      </if>
      <if test="crtUserId != null">
        crt_user_id,
      </if>
      <if test="crtUserName != null">
        crt_user_name,
      </if>
        crt_time,
      <if test="modfUserId != null">
        modf_user_id,
      </if>
        modf_time,
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=BIGINT},
      </if>
      <if test="logNum != null">
        #{logNum,jdbcType=VARCHAR},
      </if>
